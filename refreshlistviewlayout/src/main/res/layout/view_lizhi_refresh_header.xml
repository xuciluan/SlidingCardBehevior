<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lizhi_refresh_leaves_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-26dp"
        android:src="@drawable/leaves"/>

    <ImageView
        android:id="@+id/lizhi_refresh_leaves_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/leaves_left"/>

    <ImageView
        android:id="@+id/lizhi_refresh_leaves_mid_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/leaves_mid"/>


    <ImageView
        android:id="@+id/lizhi_refresh_leaves_right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/leaves_right"/>

    <ImageView
        android:id="@+id/lizhi_refresh_lizhi_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:src="@drawable/lizhi"/>


</FrameLayout>